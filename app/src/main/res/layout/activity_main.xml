<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prayer_card_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="75dp"
        android:layout_marginHorizontal="10dp"
        style="@style/cardStyle"
        android:translationZ="5dp"
        app:layout_constraintBottom_toTopOf="@id/request_prayers_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/left_sign"
        app:layout_constraintRight_toLeftOf="@id/right_sign">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/dark_gray"
            app:layout_constraintLeft_toLeftOf="@id/prayer_card_2"
            app:layout_constraintRight_toRightOf="@id/prayer_card_2"
            app:layout_constraintTop_toTopOf="@id/prayer_card_2"
            app:layout_constraintBottom_toBottomOf="@id/prayer_card_2"
            android:visibility="gone"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/prayer_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="2sp"
            app:autoSizeMaxTextSize="20sp"
            android:ellipsize="end"
            app:autoSizeStepGranularity="2sp" />

        <TextView
            android:id="@+id/prayer_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prayer_card_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="10dp"
        android:layout_marginVertical="75dp"
        android:layout_marginHorizontal="10dp"
        style="@style/cardStyle"
        app:layout_constraintBottom_toTopOf="@id/request_prayers_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/left_sign"
        app:layout_constraintRight_toLeftOf="@id/right_sign">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/dark_gray"
            app:layout_constraintLeft_toLeftOf="@id/prayer_card_1"
            app:layout_constraintRight_toRightOf="@id/prayer_card_1"
            app:layout_constraintTop_toTopOf="@id/prayer_card_1"
            app:layout_constraintBottom_toBottomOf="@id/prayer_card_1"
            android:visibility="gone"
            android:indeterminate="true"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/prayer_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="4sp"
            app:autoSizeMaxTextSize="20sp"
            android:ellipsize="end"
            app:autoSizeStepGranularity="2sp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/prayer_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="DuplicateIds" />

        <com.onlysaints.prayforme.views.TouchImageButton
            android:id="@+id/save_prayer_button"
            android:translationZ="3dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="savePrayer"
            app:click_type="PRE_ANIM"
            android:background="@drawable/empty_heart"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="11dp"
        android:alpha="0.3"
        android:padding="3dp"
        android:background="@drawable/left_sign_background"
        app:layout_constraintTop_toTopOf="@id/prayer_card_1"
        app:layout_constraintBottom_toBottomOf="@id/prayer_card_1"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textColor="#CC0000"
            app:layout_constraintTop_toBottomOf="@id/left_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:translationZ="11dp"
        android:background="@drawable/right_sign_background"
        android:stateListAnimator="@null"
        android:padding="3dp"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="@id/prayer_card_1"
        app:layout_constraintBottom_toBottomOf="@id/prayer_card_1"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pray"
            android:textColor="#00CC00"
            app:layout_constraintTop_toBottomOf="@id/right_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dark_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/start_prayer"
        android:padding="50dp"
        android:background="@color/black"
        android:focusable="true"
        android:textColor="@color/white"
        android:translationZ="15dp"
        android:alpha="0" />

    <com.onlysaints.prayforme.views.TouchImageButton
        android:id="@+id/request_prayers_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="3dp"
        android:layout_margin="25dp"
        android:background="@drawable/anchor_icon"
        app:click_type="POST_ANIM"
        android:onClick="requestPrayers"
        app:tint="@color/dark_transparent_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>