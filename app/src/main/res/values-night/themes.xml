<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrayForMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rosy_brown</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/liver</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silver</item>
        <item name="colorSecondaryVariant">@color/rosy_brown</item>
        <item name="colorOnSecondary">@color/dark_purple</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Widget.App.TextView</item>
        <item name="android:imageButtonStyle">@style/Widget.App.ImageButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="background_color">@color/eggplant</item>
        <item name="text_on_background_color">@color/transparent_white</item>
    </style>
</resources>