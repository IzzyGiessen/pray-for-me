<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="cardStyle">
        <item name="android:background">@drawable/border</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/black</item>
    </style>

    <style name="Widget.App.TextView.Light" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.TextView.Dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/cool_gray</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>